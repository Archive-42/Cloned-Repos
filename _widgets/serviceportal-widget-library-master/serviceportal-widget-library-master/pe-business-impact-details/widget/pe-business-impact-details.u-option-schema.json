<div class="panel-wrapper" ng-class="{ 'expanded': c.expanded, 'recovered': (c.alert.state === 'Closed') }">
    <div class="panel-proper">
        <div class="panel-header">
            <span ng-if="options.titleIconClasses" class="title-icon">
				<i class="{{options.titleIconClasses}}" aria-hidden="true"></i>
			</span>
            <span>Business Impact</span>
            <div class="panel-expander-wrapper" ng-click="c.expanded = !c.expanded" data-toggle="collapse" data-target="#panel-drawer" aria-expanded="false" aria-controls="panel-drawer">
                <svg class="panel-expander">
					<use xlink:href="#plus"></use>
				</svg>
            </div>
        </div>
        <div class="panel-content" id="panel-content">

            <div class="row triptych">
                <div class="col-xs-4" ng-repeat="item in c.stats">
                    <div class="key-value">
                        <span ng-if="item.value">{{item.value}}</span>
                        <span ng-if="item.icon" class="icon-inline">
							<svg class="svg-wrapper half-width">
								<use xlink:href={{item.icon}}></use>
							</svg>
						</span>
                    </div>
                    <div class="subtitle">
                        {{item.name}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-drawer collapse" id="panel-drawer">
        <sp-widget widget="c.data.drawerWidget"></sp-widget>
    </div>
</div>

<div class="hidden">

